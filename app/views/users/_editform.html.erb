<%= form_for @user, :html => { :multipart => true } do |f| %>
<%= render 'shared/error_messages', object: @user %>

<%= f.text_field :name, class: 'form-control', placeholder: "Full Name" %>
<%= f.email_field :email, class: 'form-control', placeholder: "Email" %>

<%= f.password_field :password, class: 'form-control', placeholder: "Password" %>
<%= f.password_field :password_confirmation, class: 'form-control', placeholder: "Confirm Password" %>

<br>
<b>OPTIONAL INFORMATION:</b>
<br><br>

<b>Profile Picture</b>
<%= f.file_field :avatar %>
<br>
Why I'm Here:
<%= f.text_field :herefor, class: 'form-control', placeholder: "(Student, Business, Family, Friend)" %>

Github Username:
<%= f.text_field :githublink, class: 'form-control', placeholder: "(ONLY Username)" %>

Portfolio URL:
<%= f.text_field :portfoliolink, class: 'form-control', placeholder: "Portfolio Site" %>

One Liner:
<%= f.text_field :oneliner, class: 'form-control', placeholder: "(Can be a quote, phrase, etc)" %>

<br><br><br><br>
<%= f.submit yield(:button_text), class: "btn checkin" %>
<% end %>
