<%= form_for(@user) do |f| %>
<%= render 'shared/error_messages', object: @user %>

<%= f.label :name %>
<%= f.text_field :name, class: 'form-control', value: "Full Name" %>

<%= f.label :email %>
<%= f.email_field :email, class: 'form-control', value: "Email" %>

<%= f.label :password %>
<%= f.password_field :password, class: 'form-control', value: "Password" %>

<%= f.label :password_confirmation %>
<%= f.password_field :password_confirmation, class: 'form-control', value: "Confirm Password" %>
<br>
<%= f.submit yield(:button_text), class: "btn checkin" %>
<% end %>
