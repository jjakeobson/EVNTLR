<% provide(:title, @user.name) %>
<div class="container-fluid allpages">

  <div class="row">
    <div class="col-xs-8 col-xs-offset-2 message-frame">
      <section class="user_info">
        <br>
        <br><br><br><br>
        <div class='profilepic'>
          <!-- This is where profile pic will go -->
        </div>
        <h1>
          <%= @user.name %>
        </h1>

        <table class='table table-striped'>
          <tr>Reason for attending:
          <%= @user.herefor %><br></tr>
          Email:
          <%= @user.email %><br>
          Github Profile:
          <a href="https://www.github.com/<%= @user.githublink %>">github.com/<%= @user.githublink %></a><br>
          Portfolio:
          <a href="https://<%= @user.portfoliolink %>"><%= @user.portfoliolink %></a><br>
        </div>
        <%= link_to "Edit", edit_user_path, class: "navlink", method: :get%>
      </table>
      </section>
    </div>
  </div>
</div>
