<% provide(:title, @user.name) %>
<div class="container-fluid allpages">

  <div class="row">
    <div class="col-xs-12 message-frame">
      <section class="user_info">
        <br>
        <br><br><br><br>
        <%= image_tag(current_user.avatar_url(:large_avatar))%>
        
        <h1>
          <%= @user.name %>
        </h1>

        <div>
          Reason for attending:
          <%= @user.herefor %><br>
          Email:
          <%= @user.email %><br>
          Github Profile:
          <a href="https://www.github.com/<%= @user.githublink %>">github.com/<%= @user.githublink %></a><br>
          Portfolio:
          <a href="https://<%= @user.portfoliolink %>"><%= @user.portfoliolink %></a><br>
        </div>

        <% if current_user == @user %>
          <%= link_to "Edit", edit_user_path, class: "navlink", method: :get%>
        <% end %>

      </section>
    </div>
  </div>
</div>
