<div class="container-fluid allpages">
  <div class="row">
    <div class="col-xs-12 message-frame">
      <br>
      <br>
      <br>


      <ul class="messages">
      <% @messages.each do |content| %>
        <li>
          <hr>
          <b><%= content.name%></b><br>
          <%= content.message %>
        </li>
      <% end %>
      </ul>
      <%= form_for @message, remote: true do |f| %>
        <div style="display:none">
          <%= hidden_field_tag :socket_id %>
        </div>


        <% if current_user.admin? %>
          <%= f.text_area :message, rows: 2, cols: 40 %>
          <br>
          <%= f.submit 'Send' %>
          <% end %>

      <% end %>
    </div>
  </div>
</div>
