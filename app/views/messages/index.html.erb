<%= form_for @message, remote: true do |f| %>
  <div style="display:none">
    <%= hidden_field_tag :socket_id %>
  </div>

  <!-- <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div> -->

  <div>
    <%= f.label :message %>
    <%= f.text_area :message, rows: 5, cols: 40 %>
  </div>

  <div>
    <%= f.submit 'Send' %>
  </div>
<% end %>

<ul class="messages"></ul>
